<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomNavigationViewTextStyleActive">
        <item name="android:fontFamily">@font/get_schwifty</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/get_schwifty</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MyTextStyle">
        <item name="android:fontFamily">@font/coming_soon</item>
    </style>

    <style name="MyTextStyle.grey">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MyTextStyle.greyBolt">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyTextStyle.white">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MyTextStyle.whiteBolt">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyTextStyle.blue">
        <item name="android:textColor">@color/blue_text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:shadowColor">@color/yellow_text</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/get_schwifty</item>
    </style>


    <style name="MyTextStyle.buttonGreen">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/stroke_text_green</item>
        <item name="android:paddingHorizontal">35dp</item>
        <item name="android:paddingVertical">5dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MyTextStyle.MySearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@drawable/stroke_search_grey</item>
        <item name="android:searchIcon">@drawable/icon_search</item>
        <item name="android:iconifiedByDefault">false</item>
        <item name="android:closeIcon">@drawable/icon_close</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textColorHint">@color/grey</item>
    </style>

    <style name="MySearchButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/coming_soon</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MySearchButtonStyle.Grey">
        <item name="android:background">@drawable/stroke_search_grey</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:fontFamily">@font/coming_soon</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MySearchButtonStyle.Yellow">
        <item name="android:background">@drawable/stroke_button_yellow</item>
        <item name="android:textColor">@color/yellow_text</item>
    </style>

    <style name="MySearchButtonStyle.Green">
        <item name="android:background">@drawable/stroke_text_green</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="MyRadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:buttonTint">@color/green</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/coming_soon</item>

    </style>

</resources>